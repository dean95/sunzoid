<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginStart="16dp"
  android:layout_marginEnd="16dp"
  app:cardCornerRadius="16dp">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <TextView
      android:id="@+id/currentTemp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="24dp"
      android:layout_marginEnd="24dp"
      android:textColor="@color/colorAccent"
      android:textSize="64sp"
      android:textStyle="bold"
      tools:text="31°C" />

    <TextView
      android:id="@+id/shortDescription"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="24dp"
      android:layout_marginEnd="24dp"
      android:textColor="@color/colorAccent"
      android:textSize="24sp"
      tools:text="Rain" />


    <TextView
      android:id="@+id/date"
      style="@style/ForecastTextStyle"
      android:layout_marginTop="32dp"
      tools:text="Date: Mar 10, 2020" />

    <TextView
      android:id="@+id/windSpeed"
      style="@style/ForecastTextStyle"
      android:layout_marginTop="8dp"
      tools:text="Wind speed: 1.91" />

    <TextView
      android:id="@+id/airPressure"
      style="@style/ForecastTextStyle"
      android:layout_marginTop="8dp"
      tools:text="Air pressure: 73" />

    <TextView
      android:id="@+id/humidity"
      style="@style/ForecastTextStyle"
      android:layout_marginTop="8dp"
      tools:text="Humidity: 1.91" />

    <TextView
      android:id="@+id/visibilityDistance"
      style="@style/ForecastTextStyle"
      android:layout_marginTop="8dp"
      tools:text="Visibility: 5.84" />

    <TextView
      android:id="@+id/predictability"
      style="@style/ForecastTextStyle"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="32dp"
      tools:text="Predictability: 70%" />

    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/colorPrimary" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/minMaxTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textColor="@color/colorPrimaryLight"
        android:textSize="24sp"
        tools:text="28° — 34°" />

      <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

      <ImageView
        android:id="@+id/icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        tools:src="@drawable/ic_launcher_background" />

    </LinearLayout>

  </LinearLayout>

</androidx.cardview.widget.CardView>